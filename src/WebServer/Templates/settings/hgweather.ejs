<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head %>
    <title>Mika - Settings</title>
</head>
<body>
</head>
<body class="hold-transition skin-green sidebar-mini">
<div class="wrapper">

    <!-- Header -->
    <% include ../partials/header %>

    <!-- Sidebar -->
    <% include ../partials/sidebar %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                HG Weather
                <small>Settings</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-cogs"></i> Settings</a></li>
                <li class="active">HG Weather</li>
            </ol>
        </section>

        <section class="content">
            <div class="row">
                <div class="col-lg-12 col-xs-12">
                    <div class="box box-success">
                        <form action="/settings/hgweather" method="post">
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>API Key</label>
                                            <input type="text" name="api_key" class="form-control" placeholder="8ee4991b9c354asdast454fg344371fecc" value="<%= hgweather.api_key %>">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Latitude</label>
                                            <input type="text" id="hgweather_latitude" name="latitude" class="form-control" placeholder="50.334325" value="<%= hgweather.latitude %>">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Longitude</label>
                                            <div class="input-group">
                                                <input type="text" id="hgweather_longitude" name="longitude" class="form-control" placeholder="50.334325" value="<%= hgweather.longitude %>">
                                                <span class="input-group-btn">
                                                    <button id="hgweather_btn_autodetect" class="btn btn-default" type="button"><i class="fa fa-search"></i>&nbsp;&nbsp;Autodetect</button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="box-footer">
                                <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o"></i>&nbsp;&nbsp;Save Changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
<% include ../partials/footer %>
<script>
$(document).ready(function(){
    $("#hgweather_btn_autodetect").click(function(){
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(showPosition);
        } else {
            alert("Geolocation is not supported by this browser.");
        }

        function showPosition(position) {
            $("#hgweather_latitude").val(position.coords.latitude)
            $("#hgweather_longitude").val(position.coords.longitude)
        }
    })
})
</script>
</body>
</html>